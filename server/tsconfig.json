{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node", "express", "jest"]
  },
  "include": ["src", "src/**/*", "prisma/**/*", "src/types/*"]
}